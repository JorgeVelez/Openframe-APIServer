{
  "name": "Frame",
  "plural": "frames",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Timestamp": {}
  },
  "scope": {
    "order": "created",
    "limit": 100
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "display_name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "connected": {
      "type": "boolean"
    },
    "settings": {
      "type": "object",
      "required": true,
      "default": {}
    },
    "plugins": {
      "type": "object",
      "required": true,
      "default": {
        "openframe-image": "^0.1.0",
        "openframe-glslviewer": "^0.1.0",
        "openframe-website": "^0.1.0"
      }
    },
    "formats": {
      "type": "object",
      "require": true,
      "default": {}
    }
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "model": "OpenframeUser",
      "foreignKey": "ownerId"
    },
    "managers": {
      "type": "hasAndBelongsToMany",
      "model": "OpenframeUser"
    },
    "current_artwork": {
      "type": "embedsOne",
      "model": "Artwork",
      "property": "current_artwork"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$frameManager",
      "permission": "ALLOW",
      "property": "__update__current_artwork"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "update_managers_by_username"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
